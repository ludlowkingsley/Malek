<section class="careers" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    {% if section.settings.button_link != blank %}
      <div class="careers--btn-container">
        <a href="{{ section.settings.button_link }}">
          <button type="button" name="button" class="button-circle">
            {% if section.settings.button_label %}
              {{ section.settings.button_label }}
            {% else %}
              MORE DETAILS
            {% endif %}
          </button>
        </a>
      </div>
    {% endif %}

    {% if section.settings.desc != blank %}
      <div class="careers--desc">
        {{ section.settings.desc }}
      </div>
    {% endif %}
  </div>
  {% if section.settings.img != blank %}
    <div class="lazyload careers--bg-img" data-bgset="{% include 'responsive-bg-image', image: section.settings.img %}"></div>
  {% endif %}
</section>



{% schema %}
  {
    "name": "Careers Content",
    "settings": [
      {
        "type": "header",
        "content": "Careers Content"
      },
      {
        "type": "richtext",
        "id": "desc",
        "label": "Reach Out"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Full Width Image"
      }
    ]
  }
{% endschema %}
