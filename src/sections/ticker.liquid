<section>
  <a href="" class="ticker">
    <div class="item-wrap">

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'txt' %}
            <div class="item"><p>{{ block.settings.title }}</p></div>

        {% endcase %}
      {% endfor %}
  
    </div>
  </a>
  </div>
</section>


