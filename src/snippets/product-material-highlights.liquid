{% if product.metafields.custom_fields["material_highlights"] != blank %}

  <section class="material_highlights">
    <div class="container">
      <div class="material_highlights--inner-container" >
        {% for item in product.metafields.custom_fields["material_highlights"] %}
          {% if item["highlight"] != blank %}
            <div class="cols-3 highlights">
              {% for highlight_item in item["highlight"] %}
                <div class="highlights--item col-md">
                  {% if highlight_item["title"] != blank %}
                    <h3 class="highlights--title">{{ highlight_item["title"] }}</h3>
                  {% endif %}
                  {% if highlight_item["description"] != blank %}
                    <div class="highlights--desc">
                      {{ highlight_item["description"] }}
                    </div>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
          {% if item["image"] != blank %}

            <style media="screen">
              .material_highlights--inner-container:before {
                  content: "";
                  background: url( {{ item['image'] }} );
                  opacity: 0.5;
                  top: 0;
                  left: 0;
                  bottom: 0;
                  right: 0;
                  background-size: cover;
                  background-repeat: no-repeat;
                  width: 100%;
                  height: 100%;
                  max-height: 37rem;
                  max-width: 100%;
                  position: absolute;
                  border-radius: 20rem;
                  top: 50%;
                  left: 50%;
                  transform: translate(-50%, -50%);
              }

              @media (max-width: 768px) {
                .material_highlights--inner-container:before {
                  border-radius: 25rem;
                      max-height:70rem;
                          max-width: 47rem;
                }
              }

              @media (max-width: 768px) {
                .material_highlights--inner-container:before {
                  border-radius: 25rem;
                  width: 90%;

                      max-height: 71rem;
                }
              }
            </style>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

{% endif %}
